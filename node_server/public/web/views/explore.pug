extends layout.pug

block append stylesheets
  link(rel="stylesheet" type="text/css" href="/web/css/vendor/color-picker.css")

block content
  - var userCanGenMagicLinks  = userInfo.userType === CIRCLES.USER_TYPE.TEACHER || userInfo.userType === CIRCLES.USER_TYPE.RESEARCHER;
  - var targetUsersText       = (userInfo.userType === CIRCLES.USER_TYPE.TEACHER) ? CIRCLES.USER_TYPE.STUDENT : CIRCLES.USER_TYPE.PARTICIPANT;
  - var buttonText            = 'Create ' + targetUsersText + ' Links';

  h2 Circles' Worlds
  div(class="gutter-bottom-doubled")
    div(class="pure-menu gutter-bottom")
    <span class="pure-menu-heading">Hubs</span>
      ul(class="pure-menu-list")
        li
          if userCanGenMagicLinks
            input(type='button' class="pure-button pure-button-primary" value=buttonText onclick='createMagicLinks("/w/hub", "' + userInfo.userType + '", "' + 30 + '")')
          a(href='/w/hub' class="pure-button") The Fire
        li
          if userCanGenMagicLinks
            input(type='button' class="pure-button pure-button-primary" value=buttonText onclick='createMagicLinks("/w/KIN_Hub", "' + userInfo.userType + '", "' + 30 + '")')
          a(href='/w/KIN_Hub' class="pure-button") Kinematics lab - Hub

    div(class="pure-menu gutter-bottom")
    <span class="pure-menu-heading">Challenges Surrounding Women in the Trades</span>
      ul(class="pure-menu-list")
        li
          if userCanGenMagicLinks
            input(type='button' class="pure-button pure-button-primary" value=buttonText onclick='createMagicLinks("/w/WIT_1_Kitchen", "' + userInfo.userType + '", "' + 30 + '")')
          a(href='/w/WIT_1_Kitchen' class="pure-button") Women in Tech., Act 1: Growing Up
        li
          if userCanGenMagicLinks
            input(type='button' class="pure-button pure-button-primary" value=buttonText onclick='createMagicLinks("/w/WIT_2_Lab", "' + userInfo.userType + '", "' + 30 + '")')
          a(href='/w/WIT_2_Lab' class="pure-button") Women in Tech., Act 2: In The Classroom
        li
          if userCanGenMagicLinks
            input(type='button' class="pure-button pure-button-primary" value=buttonText onclick='createMagicLinks("/w/WIT_3_Work", "' + userInfo.userType + '", "' + 30 + '")')
          a(href='/w/WIT_3_Work' class="pure-button") Women in Tech., Act 3: On The Job

    div(class="pure-menu gutter-bottom")
    <span class="pure-menu-heading">Viola Desmond, Canadian Civil Rights Pioneer</span>
      ul(class="pure-menu-list")
        li
          if userCanGenMagicLinks
            input(type='button' class="pure-button pure-button-primary" value=buttonText onclick='createMagicLinks("/w/VD_1_Salon", "' + userInfo.userType + '", "' + 30 + '")')
          a(href='/w/VD_1_Salon' class="pure-button") Viola Desmond, Act 1: The Salon
        li
          if userCanGenMagicLinks
            input(type='button' class="pure-button pure-button-primary" value=buttonText onclick='createMagicLinks("/w/VD_2_Theatre", "' + userInfo.userType + '", "' + 30 + '")')
          a(href='/w/VD_2_Theatre' class="pure-button") Viola Desmond, Act 2: The Roseland Theatre
        li
          if userCanGenMagicLinks
            input(type='button' class="pure-button pure-button-primary" value=buttonText onclick='createMagicLinks("/w/VD_3_ProvinceHouse", "' + userInfo.userType + '", "' + 30 + '")')
          a(href='/w/VD_3_ProvinceHouse' class="pure-button") Viola Desmond, Act 3: The Province House

    div(class="pure-menu gutter-bottom")
    <span class="pure-menu-heading">Education - Kinematics</span>
      ul(class="pure-menu-list")
        li
          if userCanGenMagicLinks
            input(type='button' class="pure-button pure-button-primary" value=buttonText onclick='createMagicLinks("/w/KIN_Hub", "' + userInfo.userType + '", "' + 30 + '")')
          a(href='/w/KIN_Hub' class="pure-button") Kinematics lab - Hub
        li
          if userCanGenMagicLinks
            input(type='button' class="pure-button pure-button-primary" value=buttonText onclick='createMagicLinks("/w/KIN_FreeFall", "' + userInfo.userType + '", "' + 30 + '")')
          a(href='/w/KIN_FreeFall' class="pure-button") Kinematics lab - Freefall
        li
          if userCanGenMagicLinks
            input(type='button' class="pure-button pure-button-primary" value=buttonText onclick='createMagicLinks("/w/KIN_ShootAndDrop", "' + userInfo.userType + '", "' + 30 + '")')
          a(href='/w/KIN_ShootAndDrop' class="pure-button") Kinematics lab - Shoot and Drop
        li
          if userCanGenMagicLinks
            input(type='button' class="pure-button pure-button-primary" value=buttonText onclick='createMagicLinks("/w/KIN_ShootTheMonkey", "' + userInfo.userType + '", "' + 30 + '")')
          a(href='/w/KIN_ShootTheMonkey' class="pure-button") Kinematics lab - Shoot the Monkey
    
    div(class="pure-menu gutter-bottom")
    <span class="pure-menu-heading">Education - CogSci</span>
      ul(class="pure-menu-list")
        li
          if userCanGenMagicLinks
            input(type='button' class='pure-button pure-button-primary' value=buttonText onclick='createMagicLinks("/w/COG_MemoryPalace", "' + userInfo.userType + '")')
          a(href='/w/COG_MemoryPalace' class='pure-button') CogSci Memory Palace
        li
          if userCanGenMagicLinks
            input(type='button' class='pure-button pure-button-primary' value=buttonText onclick='createMagicLinks("/w/COG_MemoryPalace_LowRes", "' + userInfo.userType + '")')
          a(href='/w/COG_MemoryPalace_LowRes' class='pure-button') CogSci Memory Palace (Low Res)
          
    div(class="pure-menu gutter-bottom")
    <span class="pure-menu-heading">For Testing</span>
      ul(class="pure-menu-list")
        li
          if userCanGenMagicLinks
            input(type='button' class="pure-button pure-button-primary" value=buttonText onclick='createMagicLinks("/w/ExampleWorld", "' + userInfo.userType + '", "' + 30 + '")')
          a(href='/w/ExampleWorld' class="pure-button") Example World
        li
          if userCanGenMagicLinks
            input(type='button' class="pure-button pure-button-primary" value=buttonText onclick='createMagicLinks("/w/Wardrobe", "' + userInfo.userType + '", "' + 30 + '")')
          a(href='/w/Wardrobe' class="pure-button") Wardrobe
        li
          if userCanGenMagicLinks
            input(type='button' class="pure-button pure-button-primary" value=buttonText onclick='createMagicLinks("/w/Testbed", "' + userInfo.userType + '", "' + 30 + '")')
          a(href='/w/Testbed' class="pure-button") Research Room

  if userCanGenMagicLinks
    div(id="MagicLinksWrapper" class="gutter-bottom-doubled")
      h3 #{targetUsersText} Links for "Magic" Automatic Login 
      p Click on one of the blue <span style='color:#0078e7; font-weight:bold;'>[#{buttonText}]</span> buttons beside the worlds above to generate "magic links" to the selected world for each #{targetUsersText}. Just copy and send each link to each #{targetUsersText} to automatically log them in. 
      p <em>Note these links expire in <span id='countdownElem' style='color:#0078e7; font-weight:bold;'>15 minutes</span></em>.
      div(id="MagicLinksContent" class="gutter-bottom-doubled")
